<?xml version="1.0" encoding="utf-8"?>

<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:mainWindowPages="using:SVPM.Pages.MainWindowPages"
            x:Class="SVPM.Pages.MainWindowPages.MainTabbedPage">
    <TabbedPage.ToolbarItems>
        <ToolbarItem Text="Pull from Origin ↓" Clicked="PullFromDatabase" />
        <ToolbarItem Text="Push to Origin ↑" Clicked="PushToDatabase" />
    </TabbedPage.ToolbarItems>
    <TabbedPage.Children>
        <mainWindowPages:CustomersPage Title="Customers" />
        <mainWindowPages:VirtualPcPage Title="Virtual PCs" />
        <mainWindowPages:AccountsPage Title="Accounts" />
    </TabbedPage.Children>
</TabbedPage>