<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SVPM.Views.MainPages.LoadingPage"
             NavigationPage.HasNavigationBar="False"
             Shell.TabBarIsVisible="False"
             Shell.FlyoutItemIsVisible="False"
             Shell.TitleView="{Null}"
             Loaded="LoadingPage_OnLoaded">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Fill" VerticalOptions="Center">
            <StackLayout>
                <Image Style="{StaticResource PcIcon}" HeightRequest="70" WidthRequest="70"/>
                <ActivityIndicator IsRunning="True"/>
                <Image Style="{StaticResource CloudIcon}" HeightRequest="70" WidthRequest="70"/>
            </StackLayout>
            <Label x:Name="Text" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" FontAttributes="Bold"/>
            <ProgressBar x:Name="ProgressBar" Margin="20,5"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>