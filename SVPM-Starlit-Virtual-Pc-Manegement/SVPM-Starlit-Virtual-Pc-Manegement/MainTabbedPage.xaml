<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:SVPM_Starlit_Virtual_Pc_Manegement"
            x:Class="SVPM_Starlit_Virtual_Pc_Manegement.MainTabbedPage"
            Title="Dashboard">

    <!-- Záložka pro Zákazníky -->
    <TabbedPage.Children>
        <NavigationPage Title="Zákazníci">
            <x:Arguments>
                <local:CustomersPage />
            </x:Arguments>
        </NavigationPage>

        <!-- Záložka pro Servery -->
        <NavigationPage Title="Virtuální Počítače">
            <x:Arguments>
                <local:VirtualPcPage />
            </x:Arguments>
        </NavigationPage>

        <!-- Záložka pro Účty -->
        <NavigationPage Title="Účty">
            <x:Arguments>
                <local:AccountsPage />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>

</TabbedPage>
