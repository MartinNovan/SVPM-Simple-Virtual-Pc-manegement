<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SVPM_Starlit_Virtual_Pc_Manegement.Pages.MainWindowPages.CustomersPage">
    <StackLayout Padding="5">
        <Grid ColumnDefinitions="auto, *, auto, auto" ColumnSpacing="5" Margin="5">
            <Label Grid.Column="0" Text="Customers:" FontSize="24" VerticalOptions="Center" />
            <SearchBar Grid.Column="1" Placeholder="Search for customers..."  TextChanged="OnSearchBarTextChanged"/>
            <Button Grid.Column="2" Text="+" Clicked="AddButton_OnClicked" VerticalOptions="End" FontSize="20" ToolTipProperties.Text="Add a new record." />
            <Button Grid.Column="3" Text="⟳" Clicked="ReloadButton_OnClicked" VerticalOptions="End" FontSize="20" ToolTipProperties.Text="Refresh this list." />
        </Grid>
        <ListView x:Name="CustomersListView" ItemTapped="CustomersListView_ItemTapped" Loaded="CustomersListView_OnLoaded">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Grid ColumnDefinitions="auto, *, auto">
                                <Image Grid.Column="0" Source="avatar.png" HeightRequest="50" WidthRequest="50" Margin="5" />
                                <StackLayout Grid.Column="1">
                                    <Grid ColumnDefinitions="auto, auto, *" ColumnSpacing="5">
                                        <Label Grid.Column="0" Text="{Binding CustomerTag}" FontSize="Medium" />
                                        <Label Grid.Column="1" Text="|" FontSize="Medium"/>
                                        <Label Grid.Column="2" Text="{Binding FullName}" FontSize="Medium"/>
                                    </Grid>
                                    <Grid ColumnDefinitions="auto, *" RowDefinitions="auto, auto" ColumnSpacing="5" Margin="15,0,0,0">
                                        <Label Text="Email:" Grid.Column="0" Grid.Row="0"/>
                                        <Label Text="{Binding Email}" Grid.Column="1" Grid.Row="0"/>
                                        <Label Text="Phone:" Grid.Column="0" Grid.Row="1"/>
                                        <Label Text="{Binding Phone}" Grid.Column="1" Grid.Row="1"/>
                                    </Grid>
                                </StackLayout>
                                <StackLayout Grid.Column="2">
                                    <ImageButton Source="pencil_icon.png" Scale="0.7" CornerRadius="3" HeightRequest="10" WidthRequest="10" VerticalOptions="Center" BackgroundColor="Gray" Clicked="EditConnection_Clicked" ToolTipProperties.Text="Click to edit this connection." />
                                    <ImageButton Source="trash_icon.png"  Scale="0.7" CornerRadius="3" HeightRequest="10" WidthRequest="10" VerticalOptions="Center" BackgroundColor="Gray" Clicked="OnDeleteButtonClicked" ToolTipProperties.Text="Click to remove this connection." Margin="0,0,3,0"/>
                                </StackLayout>
                            </Grid>
                            <BoxView HeightRequest="1" Color="Gray" Margin="5,0" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
