<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SVPM_Starlit_Virtual_Pc_Manegement.Pages.ConnectionPages.SqlCreateConnectionPage">
    <StackLayout Padding="10">
        <Label Text="Vytvoření připojení k databázi" 
       FontSize="24" 
       HorizontalOptions="Center" />
        <Label Text="Server:" />
        <Entry x:Name="ServerEntry" Placeholder="Zadejte server" />
        <Label Text="Databáze:" />
        <Entry x:Name="DatabaseEntry" Placeholder="Zadejte databázi" />

        <Label Text="Windows Authentication" />
        <Switch x:Name="WindowsAuthSwitch" Toggled="OnWindowsAuthToggled" />

        <Label Text="Uživatelské jméno:" />
        <Entry x:Name="UsernameEntry" Placeholder="Zadejte uživatelské jméno" IsEnabled="false" />
        
        <Label Text="Heslo:" />
        <Entry x:Name="PasswordEntry" Placeholder="Zadejte heslo" IsEnabled="false" IsPassword="true" />

        <Label Text="Trust server certificate" />
        <Switch x:Name="TrustCertificateSwitch" Toggled="CertificateToggled"/>
        <Label Text="Cesta k certifikátu (pokud je vyžadována):" />
        <Entry x:Name="CertificatePathEntry" Placeholder="Host name in certificate" IsEnabled="false" />
        
        <Button Text="Připojit" Clicked="OnConnectButtonClicked" Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>
